<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">


            <corners
                android:radius="80dp"
                />

            <gradient
                android:angle="45"
                android:centerX="22.5"
                android:centerY="22.5"
                android:endColor="@color/colorPrimaryDark"
                android:gradientRadius="45dp"
                android:startColor="@color/colorPrimary"
                android:type="linear" />
            <size
                android:width="50dp"
                android:height="50dp" />

            <!--Use android:dashWidth="2dp" and android:dashGap="2dp"
            to add dashes to your stroke-->
            <stroke
                android:width="2dp"
                android:color="@color/black_overlay" />


        </shape>

    </item>

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">


            <corners
                android:radius="80dp"
                />

            <gradient
                android:angle="45"
                android:centerX="22.5"
                android:centerY="22.5"
                android:endColor="@color/background"
                android:gradientRadius="45dp"
                android:startColor="@color/background"
                android:centerColor="@color/background"
                android:type="linear" />
            <size
                android:width="50dp"
                android:height="50dp" />

            <!--Use android:dashWidth="2dp" and android:dashGap="2dp"
            to add dashes to your stroke-->
            <stroke
                android:width="2dp"
                android:color="@color/background" />


        </shape>


    </item>

</selector>
