<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:id="@+id/cardViewHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:elevation="3dp"
        android:background="@color/background"
        app:cardCornerRadius="@dimen/card_hist_radius">

        <RelativeLayout
            android:id="@+id/histRelLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background">


            <TextView
                android:id="@+id/txtHistOrderID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:textColor="@color/price"
                android:text="Order ID"
                 />

            <TextView
                android:id="@+id/txtHistOrderDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtHistOrderID"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:textColor="@color/price"
                android:text="Order Date: " />

            <TextView
                android:id="@+id/txtHistOrderDes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtHistOrderDate"
                android:layout_marginStart="10dp"
                android:textColor="@color/price"
                android:text="Order Descr" />

            <TextView
                android:id="@+id/txtOrderHistTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/txtHistOrderDes"
                android:textColor="@color/price"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:text="Total: R"/>
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>