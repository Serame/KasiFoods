<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

  >

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:elevation="3dp"
        android:background="@color/pureWhite"
        app:cardCornerRadius="@dimen/card_hist_radius">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="@color/background">

    <TextView
        android:text="Name goes here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:id="@+id/txtOrderBunnyName" />

    <TextView
        android:text="Description goes here"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtOrderBunnyName"
        android:layout_alignStart="@+id/txtOrderBunnyName"
        android:id="@+id/txtOrderBunnyDescr" />

    <TextView
        android:text="@string/temp_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtOrderBunnyDescr"
        android:layout_alignParentEnd="true"
        android:id="@+id/txtOrderBunnyPrice"
        android:textColor="@color/colorPrimaryDark"

        />


    <TextView
        android:text="Added Items: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtfinalAddedItems1"
        android:layout_below="@+id/txtOrderBunnyDescr"
        android:textStyle="bold"
        android:layout_alignStart="@+id/txtOrderBunnyDescr"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtAddedItemsTotal"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/txtOrderBunnyTotal"
        android:textStyle="bold"
        android:text="@string/temp_price"/>

    <TextView
        android:text="Added items Total:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtfinalAddedItems1"
        android:layout_alignStart="@+id/txtOrderBunnyDescr"
        android:textStyle="bold"
        android:id="@+id/txtAddedItemsList" />






    <TextView
        android:text="Total:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtAddedItemsList"
        android:layout_alignStart="@+id/txtOrderBunnyDescr"
        android:textStyle="bold"
        android:id="@+id/txtBunnyTotalLbl" />


    <TextView
        android:text="R20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtBunnyTotalLbl"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"
        android:id="@+id/txtOrderBunnyTotal" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>